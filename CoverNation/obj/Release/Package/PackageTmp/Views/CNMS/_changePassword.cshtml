@model CoverNation.ViewModel.CNMSViewModel.ChangePassword

@using (Ajax.BeginForm("ChangePassword", new AjaxOptions { UpdateTargetId = "CNMSContent" }))
{
    @Html.ValidationSummary(true, "", new { @class = "login-text-danger" })
    <h3 style="color:white;">Change password</h3>

    <div class="col-md-5">
        <div class="formGroup">
            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "formLabel col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "loginInput" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="formGroup">
            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "formLabel col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "loginInput" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="formGroup">
            @Html.LabelFor(model => model.NewPasswordRepeat, htmlAttributes: new { @class = "formLabel col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPasswordRepeat, new { htmlAttributes = new { @class = "loginInput" } })
                @Html.ValidationMessageFor(model => model.NewPasswordRepeat, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" class="submitBtnCNMS"/>

    </div>
}
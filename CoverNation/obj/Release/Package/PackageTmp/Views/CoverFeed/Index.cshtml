<div id="cover-feed-container">
    <div id="searchModal">
        <i class="fa fa-times" id="closeSearch" aria-hidden="true"></i>
        <div id="searchModal-content">
            @using (Ajax.BeginForm("test", "CoverFeed", new AjaxOptions { UpdateTargetId = "search-result" }))
            {
            <div class="row" style="padding:0 30px;">
                <div class="col-md-11">
                    <input type="text" name="searchTerm" class="loginInput" placeholder="Search covers or users"  autocomplete="off"/>
                </div>
                <div class="col-md-1" style="text-align:right;">
                    <i class="fa fa-search"></i>
                </div>
            </div>

            <div class="row">
                <section id="search-radio-container" class="section">
                    <div class="container">
                        <input type="radio" name="group1" id="radio-1" value="cover" checked>
                        <label for="radio-1"><span class="radio">Covers</span></label>
                    </div>
                    <div class="container">
                        <input type="radio" name="group1" id="radio-2" value="user">
                        <label for="radio-2"><span class="radio">Users</span></label>
                    </div>
                </section>
            </div>
            }
            <div id="search-result" class="row">
               
            </div>
        </div>
    </div>
    <div id="cover-feed-subs">
        <p><i class="fa fa-search" id="mainSearch"></i> <span style="color:transparent;">dd</span>Search covers and users</p>
    </div><!-- end of cover-feed-subs -->
    <div id="cover-feed-covers">
        @{
                Html.RenderAction("getCoverFeedCovers", "CoverFeed");
        }
    </div><!-- end of cover-feed-covers -->
    <div id="cover-feed-playlist">
        @{
            Html.RenderAction("Index", "Playlist", new { v = "coverFeedCall" });
        }
    </div><!-- end of cover-feed-playlist -->

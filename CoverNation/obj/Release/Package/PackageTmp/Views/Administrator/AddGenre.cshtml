@using CoverNation.ViewModel
@model CoverNation.ViewModel.GenreViewModel

<h2>Add Genre</h2>

@using (@Html.BeginForm("AddGenre", "Administrator", FormMethod.Post, new { @class = "form-horizontal" }))
{ 
@Html.HiddenFor(x => x.GenreId);
<div class="form-group">
    <label class="col-sm-2 control-label">Genre Name: </label>
    @Html.TextBoxFor(x => x.GenreName, new { @class = "form-control" })
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Genre Image: </label>
    @Html.TextBoxFor(x => x.GenreImage, new { @class = "form-control" })
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</div>
}


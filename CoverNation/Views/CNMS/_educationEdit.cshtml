@model CoverNation.ViewModel.CNMSViewModel.MusicianEducationEdit
<div class="row">
    <h3 style="color:white;">Change education</h3>
    <div class="col-xs-12 col-md-6" style="margin-bottom:76px;">
        @using (Ajax.BeginForm("AddEducationItem", new AjaxOptions { UpdateTargetId = "userInstrumentList" }))
        {

            <div class="formGroup">
                @Html.LabelFor(model => model.InstrumentId, htmlAttributes: new { @class = "formLabel col-md-12" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.InstrumentId, Model.Instruments, new { @class = "loginInput" })
                </div>
                
            </div>


            <div class="formGroup">
                @Html.LabelFor(model => model.InstitutionName, htmlAttributes: new { @class = "formLabel col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InstitutionName, new { htmlAttributes = new { @class = "loginInput" } })
                    @Html.ValidationMessageFor(model => model.InstitutionName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="formGroup">
                @Html.LabelFor(model => model.DateOfStart, htmlAttributes: new { @class = "formLabel col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateOfStart, new { htmlAttributes = new { @class = "loginInput" } })
                    @Html.ValidationMessageFor(model => model.DateOfStart, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="formGroup">
                @Html.LabelFor(model => model.DetailsAboutEducation, htmlAttributes: new { @class = "formLabel col-md-12" })
                <div class="col-md-10">
                    <textarea name="DetailsAboutEducation" class="loginInput"></textarea>
                    @Html.ValidationMessageFor(model => model.DetailsAboutEducation, "", new { @class = "text-danger" })
                </div>
            </div>
            <input type="submit" id="genreSubmit" class="submitBtnCNMS"/>
        }
    </div>

    <div id="userInstrumentList" class="col-xs-12 col-md-6" style="color:white;">
        @{
            Html.RenderAction("GetMusicianInstruments");
        }
    </div>
</div>
